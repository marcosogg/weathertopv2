<form action="/dashboard/addreading" method="POST">
    <input type="hidden" name="station_id" value="{{station_id}}">
    <div class="field is-flex">
        <div class="field-wrapper">
            <label class="label">Code</label>
            <input class="input" type="text" placeholder="Enter code" name="code">
        </div>
        <div class="field-wrapper">
            <label class="label">Temperature</label>
            <input class="input" type="text" placeholder="Enter Temperature" name="temperature">
        </div>
        <div class="field-wrapper">
            <label class="label">Wind Speed</label>
            <input class="input" type="text" placeholder="Enter Wind Speed" name="windSpeed">
        </div>
        <div class="field-wrapper">
            <label class="label">Wind Direction</label>
            <input class="input" type="text" placeholder="Enter Wind Speed" name="windDirection">
        </div>
        <div class="field-wrapper">
            <label class="label">Pressure</label>
            <input class="input" type="text" placeholder="Enter Pressure" name="pressure">
        </div>
        <!-- Move the button outside of the field-wrapper and adjust alignment -->
    </div>
    <!-- Place the button here, outside of the is-flex div -->
    <button class="button is-link">Add Reading</button>
</form>
