<style>
    .table-container {
        overflow-x: auto;
    }

    .weather-table {
        border-collapse: collapse;
        width: 100%;
        margin-top: 10px;
    }

    .weather-table th,
    .weather-table td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    .weather-table th {
        background-color: #f2f2f2;
    }

    .weather-table tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .weather-table tbody tr:hover {
        background-color: #ddd;
    }
</style>
<ul>
    <li>{{station.title}}</li>
    <li>
    {{last_reading.codeText}}
    </li>
    <li>{{last_reading.windSpeed}}</li>
    <li>{{last_reading.windDirection}}</li>
    <li>{{last_reading.pressure}}</li>
</ul>
<div class="table-container">
    <table class="weather-table">
        <thead>
            <tr>
                <th>Code</th>
                <th>Temperature (Â°C)</th>
                <th>Wind Speed (km/h)</th>
                <th>Wind Direction</th>
                <th>Pressure (hPa)</th>
            </tr>
        </thead>
        <tbody>
            {{#each readings}}
            <tr>
                <td>{{code}}</td>
                <td>{{temperature}}</td>
                <td>{{windSpeed}}</td>
                <td>{{windDirection}}</td>
                <td>{{pressure}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
