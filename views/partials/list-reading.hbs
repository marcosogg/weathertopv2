<style>
    .table-container {
        overflow-x: auto;
    }

    .weather-table {
        border-collapse: collapse;
        width: 100%;
        margin-top: 10px;
    }

    .weather-table th,
    .weather-table td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    .weather-table th {
        background-color: #f2f2f2;
    }

    .weather-table tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .weather-table tbody tr:hover {
        background-color: #ddd;
    }

    /* Card Styles */
    .card-container {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
    }

    .card {
        background-color: rgb(0, 0, 0);
        color: white;
        border: 1px solid #ddd;
        padding: 15px;
        width: 250px;
        /* Set width */
        height: 150px;
        /* Set height to make it square */
        box-shadow: 2px 2px 12px rgba(0, 0, 0, 0.2);
        border-radius: 5px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .card-title {
        font-weight: bold;
        margin-bottom: 10px;
    }
</style>
<div class="card-container">
    <div class="card">
        <div class="card-title">Station</div>
        {{station.title}}
    </div>
    <div class="card">
        <div class="card-title">Weather</div>
        {{last_reading.codeText}}
    </div>
    <div class="card">
        <div class="card-title">Temperature</div>
        {{last_reading.temperature}}째C / {{last_reading.temperatureFahrenheit}}째F
    </div>
    <div class="card">
        <div class="card-title">Wind Direction</div>
        {{last_reading.windDirection}} bft
    </div>
    <div class="card">
        <div class="card-title">Pressure</div>
        {{last_reading.pressure}} hpa
    </div>
</div>
<div class="table-container">
    <table class="weather-table">
        <thead>
            <tr>
                <th>Code</th>
                <th>Temperature (째C)</th>
                <th>Wind Speed (km/h)</th>
                <th>Wind Direction</th>
                <th>Pressure (hPa)</th>
            </tr>
        </thead>
        <tbody>
            {{#each readings}}
            <tr>
                <td>{{code}}</td>
                <td>{{temperature}} 째C</td>
                <td>{{windSpeed}}</td>
                <td>{{windDirection}}</td>
                <td>{{pressure}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>